{
  "manifest_version": 3,
  "name": "RoleMail",
  "version": "2.1",
  "description": "A smart Gmail side panel to create, manage, and reuse email templates with one-click paste.",
  "permissions": ["storage", "activeTab", "scripting", "sidePanel"],
  "host_permissions": ["https://mail.google.com/*"],
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["content.js"]
    }
  ]
}